{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "lib/",
        "lib": [
            "es7", "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ]
}